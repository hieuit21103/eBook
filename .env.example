# Postgres Connection
PG_HOST=localhost
PG_PORT=5432
PG_USERNAME=postgres
PG_PASSWORD=postgres

# Redis Connection String
REDIS_CONNECTION_STRING=localhost:6379

# JWT Settings
JWT_ISSUER=YourIssuer
JWT_AUDIENCE=YourAudience
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast16CharactersLong
# JWT Expiration in Minutes
JWT_EXPIRY_MINUTES=60
# Refresh Token Expiration in Days
REFRESH_TOKEN_EXPIRY_DAYS=7

# S3 Storage
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=document
S3_PRESIGN_EXPIRATION_MINUTES=15

# Service URLs
IDENTITY_SERVICE_URL=http://localhost:5001
DOCUMENT_SERVICE_URL=http://localhost:5002
FILE_STORAGE_URL=http://localhost:5003

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_RETRY_COUNT=3
RABBITMQ_RETRY_INTERVAL_SECONDS=10

# RabbitMQ Default 
RABBITMQ_DEFAULT_USERNAME=guest
RABBITMQ_DEFAULT_PASSWORD=guest