{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "eBook.Identity",
    "Audience": "eBook",
    "SecretKey": "YourSuperSecretKeyForJwtTokenGeneration",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity"
          }
        ],
        "RateLimiterPolicy": "custom"
      },
      "document": {
        "ClusterId": "document",
        "Match": {
          "Path": "/documents/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/documents"
          }
        ],
        "RateLimiterPolicy": "custom"
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "document": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}